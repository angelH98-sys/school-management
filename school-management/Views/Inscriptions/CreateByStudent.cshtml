@model school_management.Models.Inscriptions
@using school_management.Models 

@{
    ViewBag.Title = "Registro";
    List<SelectListItem> availableCourses = (List<SelectListItem>)ViewBag.selectList;
}

<h2>Inscripción de curso</h2>
<h3>@ViewBag.studentname</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })       
        @Html.Hidden("idStudent", (int) ViewBag.idStudent)

        <div class="form-group">
            <label class="control-label col-md-2">Cursos disponibles</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idCourse, availableCourses, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.idCourse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-lg-1 col-md-2 col-sm-2 col-xs-3">
                <input type="submit" value="Registrar" class="btn btn-primary w" />
            </div>
            <div class="col-lg-1 col-md-1 col-sm-2 col-xs-2">
                @Html.ActionLink("Cancelar", "Details", "Students", new { id = ViewBag.idStudent }, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}
